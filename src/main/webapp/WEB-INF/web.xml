<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="4.0">

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginRedirect</servlet-name>
        <jsp-file>/login.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginRedirect</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterRedirect</servlet-name>
        <jsp-file>/register.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterRedirect</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProductRedirect</servlet-name>
        <jsp-file>/add_product.html</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddProductRedirect</servlet-name>
        <url-pattern>/add_product</url-pattern>
    </servlet-mapping>

</web-app>
